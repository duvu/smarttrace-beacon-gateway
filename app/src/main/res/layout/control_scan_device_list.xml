<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/linearlayout_radius"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#808080"
            android:gravity="center"
            android:text="--"
            android:id="@+id/txtRSSI" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/imgRssi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#808080"
            android:gravity="center"
            android:text="--"
            android:id="@+id/txtDistance" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:id="@+id/imgBattery"
                android:layout_weight="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#808080"
                android:gravity="center"
                android:text="--"
                android:id="@+id/txtBattery"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="#808080"
            android:textSize="15dp"
            android:id="@+id/txtSN"/>

        <!--TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#808080"
            android:textSize="16dp"
            android:id="@+id/txtName" /-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutEddystone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Url "
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/labUrl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#808080"
                android:textSize="16dp"
                android:id="@+id/txtUrl" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutIbeacon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Major "
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#808080"
                android:textSize="16dp"
                android:id="@+id/txtMajor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minor "
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#808080"
                android:textSize="16dp"
                android:id="@+id/txtMinor" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutTemperature">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lan_143"
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/labTemperature" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="--"
                android:textColor="#808080"
                android:textSize="15dp"
                android:id="@+id/txtTemperature" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/lan_144"
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/labHumidity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="--"
                android:textColor="#808080"
                android:textSize="15dp"
                android:id="@+id/txtHumidity" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#808080"
                android:textSize="15dp"
                android:id="@+id/txtMacAddress" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!--TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/serial_number"
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/textView5"
                android:layout_weight="0.19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#808080"
                android:textSize="15dp"
                android:id="@+id/txtSN"
                android:layout_weight="0.53" /-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lan_145"
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/textView4"
                android:layout_weight="0.25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#808080"
                android:textSize="15dp"
                android:id="@+id/txtProtocol"
                android:layout_weight="0.25" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>